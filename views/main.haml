!!! 5

%html
	%head
		%title Traveller Map
		%link{:rel => "stylesheet", :type => "text/css", :href => url("style.css")}

	%body

		%div.layer-display{ :style => "background-image: url(#{locals[:img_url]})" }
			%img{ :src => locals[:img_2_url] }

		%div.worlds
			%table
				- locals[:world_data].each do |world|
					- name = world["Name"]
					- uwp = world["UWP"]
					
					%tr
						%td= "Name: " + name
						%td= "UWP: " + uwp
